<h1>Listing Articles</h1>

<%= link_to 'More Things To Do?', new_article_path %>

<table>
  <tr>
    <th>Task</th>
    <th>Brief</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'DETAILS', article_path(article) %></td>
      <td><%= link_to 'EDIT', edit_article_path(article) %>
      <td><%= link_to 'DELETE', article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
